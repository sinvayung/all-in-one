<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@+id/navigation_home">

    <!-- navigation文件中fragment的id，须与menu文件中item的id一致 -->

    <fragment
        android:id="@+id/navigation_home"
        android:name="cn.sinva.remember.HomeFragment"
        android:label="@string/ic_home_name"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_message"
        android:name="cn.sinva.remember.MessageFragment"
        android:label="@string/ic_message_name"
        tools:layout="@layout/fragment_message" >
        <action
            android:id="@+id/action_navigation_message_to_chatFragment"
            app:destination="@id/navigation_chat" />
    </fragment>
    <fragment
        android:id="@+id/navigation_mine"
        android:name="cn.sinva.remember.MineFragment"
        android:label="@string/ic_mine_name"
        tools:layout="@layout/fragment_mine" >
        <action
            android:id="@+id/action_navigation_mine_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>
    <fragment
        android:id="@+id/navigation_chat"
        android:name="cn.sinva.remember.ChatFragment"
        android:label="聊天"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/navigation_login"
        android:name="cn.sinva.remember.LoginFragment"
        android:label="登录"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/navigation_list"
        android:name="cn.sinva.remember.ItemFragment"
        android:label="列表"
        tools:layout="@layout/fragment_item_list" />
</navigation>